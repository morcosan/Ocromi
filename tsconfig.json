{
	"compilerOptions": {
		"allowJs": true,
		"sourceMap": true,
      "lib": ["es6", "dom", "es2017"],
		"target": "es6",
		"strict": true,
		"experimentalDecorators": true,
		"module": "esnext",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"src/*": [
				"src/*"
			]
		},
		"types": [
			"quasar",
			"jest"
		],
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"docs",
		".jest"
	]
}
